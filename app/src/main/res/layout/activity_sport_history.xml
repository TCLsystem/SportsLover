<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sport_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_begin_sport_background"
    android:orientation="vertical"
    tools:context="com.example.user.sportslover.activity.SportHistoryActivity">

    <RelativeLayout
        android:id="@+id/history_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/history_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/sport_back"/>

        <TextView
            android:id="@+id/tv_history_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="History"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_history_select_button"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:drawableRight="@drawable/ic_month_down"
            android:background="@color/transparent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:text="MONTH"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <com.example.user.sportslover.widget.MyVerticalViewPager
        android:id="@+id/history_vertical_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
