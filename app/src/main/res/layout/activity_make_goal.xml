<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_make_goal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.example.user.sportslover.activity.MakeGoal"
              android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tvDay"
        android:layout_marginTop="50dp"
        android:text="Set weekly exercise days " />

    <SeekBar
        android:maxHeight="2dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:max="7"
        android:progress="0"
        android:layout_marginTop="30dp"
        android:id="@+id/seekDay" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="set daily exercise hours"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/tvTime" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:max="300"
        android:progress="0"
        android:layout_marginTop="30dp"
        android:id="@+id/seekTime" />

    <Button
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSave"
        android:background="@drawable/shape_rectanglar_gradient_button"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="save"/>

</LinearLayout>
