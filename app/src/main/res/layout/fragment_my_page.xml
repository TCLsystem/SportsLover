<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            tools:context="com.example.user.sportslover.fragment.MyPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/mybackground"
            android:orientation="vertical">

            <TextView
                style="@style/style_text_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/normal_space"
                android:text="Mirror"
                android:textColor="@color/base_color_text_white"
                android:textSize="18dp"/>

            <com.example.user.sportslover.customview.RoundImageView
                android:id="@+id/UserPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_empty_dish"/>

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="click to login"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sportsClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="level"
                    android:textSize="16dp"/>

                <ProgressBar
                    android:id="@+id/pbClass"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="8"
                    android:progressDrawable="@drawable/progressbar"
                    android:visibility="visible">
                </ProgressBar>

                <TextView
                    android:id="@+id/tvLV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="LV0"
                    android:textSize="16dp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/personalData"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawablePadding="@dimen/normal_space"
                android:drawableTop="@drawable/personal_data"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:text="@string/personalData"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/motionRecord"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawablePadding="@dimen/normal_space"
                android:drawableTop="@drawable/sports_records"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:text="@string/sportsRecords"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/motionGoal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawablePadding="@dimen/normal_space"
                android:drawableTop="@drawable/weekly_goals"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:text="@string/weeklyGoals"
                android:textSize="16dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MyRecordRoute"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawablePadding="@dimen/normal_space"
                android:drawableTop="@drawable/my_route"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:text="@string/myRoute"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/myMotion"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawablePadding="@dimen/normal_space"
                android:drawableTop="@drawable/my_activity"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:text="@string/myActivity"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/setting"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawablePadding="@dimen/normal_space"
                android:drawableTop="@drawable/setting4"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:text="@string/settings"
                android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
