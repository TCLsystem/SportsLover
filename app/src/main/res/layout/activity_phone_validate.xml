<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_validate"
    tools:context="com.example.user.sportslover.activity.PhoneValidateActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/register_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/mybackground"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:padding="@dimen/normal_space"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/normal_space"
                    android:text="Add phone number"
                    android:textSize="@dimen/title_text_size" />
            </LinearLayout>


      <LinearLayout
          android:layout_marginTop="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="vertical">

        <LinearLayout
            android:id="@+id/number"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:layout_gravity="center"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:layout_gravity="center"/>


            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/normal_space"
                android:hint="@string/register_phone_default"
                android:inputType="phone"
                android:singleLine="true" />



        </LinearLayout>

          <LinearLayout
              android:id="@+id/verify"
              android:layout_marginTop="2dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/white">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/verification"
                  android:layout_gravity="center"/>

              <EditText
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/register_checknum"
                  android:layout_marginRight="20dp"
                  android:layout_gravity="center"
                  android:hint="@string/register_check_num_default"
                  android:inputType="text"
                  android:singleLine="true" />


              <Button
              android:id="@+id/register_get_check_pass"
              android:layout_width="80dp"
              android:layout_height="40dp"
              android:gravity="center"
              android:layout_gravity="center_vertical"
              android:background="@drawable/submit"
              android:layout_marginRight="10dp"
              android:text="get code" />
          </LinearLayout>


          <LinearLayout
              android:id="@+id/password"
              android:layout_marginTop="2dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/white">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/password"
                  android:layout_gravity="center"/>

              <EditText
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_password"
                  android:layout_marginRight="20dp"
                  android:layout_gravity="center"
                  android:inputType="text"
                  android:hint="@string/register_upass_default"
                  android:singleLine="true" />
          </LinearLayout>


    </LinearLayout>
   </LinearLayout>


    <Button
        android:layout_marginTop="80dp"
        android:id="@+id/register_btn"
        android:layout_width="154dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/normal_space"
        android:background="@drawable/submit"
        android:padding="@dimen/little_space"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_defalut" />

</LinearLayout>
