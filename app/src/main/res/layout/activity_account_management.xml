<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_account_management"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.user.sportslover.activity.AccountManagement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/mybackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/account_settings_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:padding="@dimen/normal_space"
            android:src="@drawable/base_action_bar_back_bg_selector"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/normal_space"
            android:text="@string/account"
            android:textColor="@color/base_color_text_white"
            android:textSize="@dimen/title_text_size"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/normal_space"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_space"
        android:text="Change your phone number"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/et_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="@dimen/normal_space"
            android:gravity="center_vertical"
            android:hint="@string/Cellphone"
            android:padding="@dimen/normal_space"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btn_account"
            android:layout_width="93dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="80dp"
            android:background="@drawable/btn_add"
            android:checked="false"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/normal_space"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_space"
        android:text="@string/tips"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawablePadding="@dimen/normal_space"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_space"
        android:text="@string/tideother"
        android:textSize="16dp"/>


    <TextView
        android:id="@+id/Wechat"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawablePadding="@dimen/normal_space"
        android:drawableRight="@drawable/select"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_space"
        android:text="@string/wechat"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/Weibo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawablePadding="@dimen/normal_space"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_space"
        android:text="@string/weibo"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/QQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawablePadding="@dimen/normal_space"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_space"
        android:text="@string/QQ"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/Facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawablePadding="@dimen/normal_space"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_space"
        android:text="@string/facebook"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/normal_space"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_space"
        android:text="@string/tips2"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/logoutbtn"
        android:gravity="center"
        android:text="@string/logout"/>

</LinearLayout>
