<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/baidu_map_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true" />

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/ll_baidu_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/target0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/ll_baidu_map_buttons"
            android:text="目标"
            />

        <LinearLayout
            android:id="@+id/ll_baidu_map_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/start0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开始" />

            <Button
                android:id="@+id/pause0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="暂停" />

            <Button
                android:id="@+id/resume0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="继续" />

            <Button
                android:id="@+id/stop0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="停止" />

        </LinearLayout>

        <Button
            android:id="@+id/route0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/ll_baidu_map_buttons"
            android:text="路径"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_baidu_map_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_hours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:" />

        <TextView
            android:id="@+id/tv_minutes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:" />

        <TextView
            android:id="@+id/tv_seconds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00" />

    </LinearLayout>

    <TextView
        android:id = "@+id/distance"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:text ="现在走过的距离是：0米"
        android:textSize = "20dp"/>"

    <com.example.user.sportslover.view.CircularRingPercentageView
        android:id="@+id/progress"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        app:circleRoundWidth="18dp"
        app:circleTextColor="#999999"
        app:circleTextSize="8sp" />

    <com.example.user.sportslover.view.TuneWheelView
        android:id="@+id/ruler"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center" />

    <TextView
        android:id = "@+id/tv_target"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:text ="0千米"
        android:textSize = "10dp"/>"

</LinearLayout>
